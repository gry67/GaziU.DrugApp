@using GaziU.DrugApp.DAL.Models
@model HomeViewModel

@{
    ViewData["Title"] = "Psikiyatrik Tedavi Takip Sistemi";
}

<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#">Psikiyatrik Tedavi Takip Sistemi</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Hakkımızda</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">İletişim</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Psikiyatrik Tedavi Takip Sistemi</h2>
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title text-center">Giriş Yapın</h4>
                    <ul class="nav nav-tabs nav-justified mb-4" id="loginTabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="patient-tab" data-toggle="tab" href="#patient" role="tab" aria-controls="patient" aria-selected="true">Hasta Girişi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="doctor-tab" data-toggle="tab" href="#doctor" role="tab" aria-controls="doctor" aria-selected="false">Doktor Girişi</a>
                        </li>
                    </ul>
                    <div class="tab-content" id="loginTabsContent">
                        <!-- Hasta Girişi Formu -->
                        <div class="tab-pane fade show active" id="patient" role="tabpanel" aria-labelledby="patient-tab">
                            
                            <form method="post" action="/Home/Hastaİslemleri">
                                <div class="form-group">
                                    <label asp-for="hasta.EPosta">E-posta</label>
                                    <input asp-for="hasta.EPosta" class="form-control" type="text" required>
                                </div>
                                <div class="form-group">
                                    <label asp-for="hasta.Sifre">Şifre</label>
                                    <input type="password" class="form-control" asp-for="hasta.Sifre" required>
                                </div>
                                <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
                            </form>
                        </div>

                        <div class="tab-pane fade" id="doctor" role="tabpanel" aria-labelledby="doctor-tab">
                                <form method="post" action="/Home/Doktorİslemleri">
                                <div class="form-group">
                                    <label asp-for="doktor.EPosta">E-posta</label>
                                        <input asp-for="doktor.EPosta" type="text" class="form-control" required>
                                </div>
                                <div class="form-group">
                                    <label asp-for="doktor.Sifre">Şifre</label>
                                        <input asp-for="doktor.Sifre" type="password" class="form-control"  required>
                                </div>
                                <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRkfu/XK0NfX7FfZfjAN9tS+MHR49u5RR9/pbzh/y" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js" integrity="sha384-lpyKZP0f4K6f6I7i86e6ImDJ1hkgLUrcI1lUmBgLsZO6B5OjDhK4sO8D5N+J7jD4" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
            // Tab değişim olayını kontrol et
            $('#loginTabs a').on('click', function (e) {
                e.preventDefault();
                $(this).tab('show');
            });
        });
    </script>
}
