@using GaziU.DrugApp.DAL.Models
@model Hasta

@{
    ViewData["Title"] = "KullandigiIlaclar";
}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <a class="navbar-brand" href="#">Psikiyatrik Tedavi Takip Sistemi</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Testler" asp-action="BeckAnksiyete" asp-route-hastaId="@Model.Id">Beck Anksiyete Ölçeği</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Testler" asp-action="BeckDepresyon" asp-route-hastaId="@Model.Id">Beck Depresyon Ölçeği</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Testler" asp-action="BarnesAkatiziTesti" asp-route-hastaId="@Model.Id">Barnes Akatizi Ölçeği</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Hakkımızda</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">İletişim</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Çıkış Yap</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-3">
            <div class="list-group">
                <a asp-controller="HastaIslemleri" asp-action="HastaIslemleriIndexById" asp-route-hastaId="@Model.Id" class="list-group-item list-group-item-action">İlaç Ekle</a>
                <a asp-controller="HastaIslemleri" asp-action="KullandigiIlaclarById" asp-route-hastaId="@Model.Id" class="list-group-item list-group-item-action">Hastanın Kullandığı İlaçlar</a>
                <a asp-controller="HastaIslemleri" asp-action="YapilanTestler" asp-route-id="@Model.Id" class="list-group-item list-group-item-action">Hastanın Yaptığı Beck Anksiyete Ölçekleri</a>
                <a asp-controller="HastaIslemleri" asp-action="BeckDepresyon" asp-route-id="@ViewBag.hastaId" class="list-group-item list-group-item-action">Hastanın Yaptığı Beck Depresyon Ölçekleri</a>
            </div>
        </div>
        <div class="col-md-9">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>İlaç Adı</th>
                        <th>Kullanım Bilgisi</th>
                        <th>Kayıt Tarihi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ilac in ViewBag.IlacKayitlari as List<IlacKayitlariViewModel> ?? new List<IlacKayitlariViewModel>())
                    {
                        <tr>
                            <td>@ilac.İlacAdi</td>
                            <td>@ilac.KullanimBilgisi</td>
                            <td>@ilac.KayitTarihi?.ToString()</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
