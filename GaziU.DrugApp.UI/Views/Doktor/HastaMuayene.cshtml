@using GaziU.DrugApp.DAL.Models

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <a class="navbar-brand" href="#">Psikiyatrik Tedavi Takip Sistemi</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#">Hakkımızda</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">İletişim</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Çıkış Yap</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container mt-5">
    <div class="row">
        <!-- Sol Menü -->
        <div class="col-md-3">
            <div class="list-group">
                <a asp-controller="HastaIslemleri" asp-action="HastaIslemleriIndexById" asp-route-hastaId="@ViewBag.hastaId" class="list-group-item list-group-item-action">İlaç Ekle</a>
                <a asp-controller="HastaIslemleri" asp-action="KullandigiIlaclarById" asp-route-hastaId="@ViewBag.hastaId" class="list-group-item list-group-item-action">Hastanın Kullandığı İlaçlar</a>
                <a asp-controller="HastaIslemleri" asp-action="YapilanTestler" asp-route-id="@ViewBag.hastaId" class="list-group-item list-group-item-action">Hastanın Yaptığı Beck Anksiyete Ölçekleri</a>
                <a asp-controller="HastaIslemleri" asp-action="BeckDepresyon" asp-route-id="@ViewBag.hastaId" class="list-group-item list-group-item-action">Hastanın Yaptığı Beck Depresyon Ölçekleri</a>
            </div>
        </div>

        <!-- Ana İçerik Bölümü -->
        <div class="col-md-9">
            <h2 class="mb-4">Hasta Muayene Notları</h2>
            <form method="post" action="@Url.Action("HastaMuayeneKayitEkle","Doktor")">
                <input type="hidden" name="HastaId" value="@ViewBag.hastaId" />
                <input type="hidden" name="CreatedDate" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm:ss")" />

                <div class="mb-3">
                    <label for="muayeneNotlari" class="form-label">Muayene Notları</label>
                    <textarea class="form-control" id="muayeneNotlari" name="MuayeneNotlari" rows="6"></textarea>
                </div>

                <button type="submit" class="btn btn-primary">Kaydet</button>
            </form>
        </div>
    </div>
</div>
